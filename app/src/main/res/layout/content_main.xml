<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="xyz.the1124.packagescanner.MainActivity" android:id="@+id/constraintLayout">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/appTitle" android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:padding="10dp" android:text="@string/package_scanner"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="25dp"
            tools:layout_editor_absoluteY="28dp" tools:layout_editor_absoluteX="85dp" android:textAlignment="center"/>
    <Button
            android:text="@string/sync_packages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sync_packages_button" android:layout_weight="1"
            tools:layout_editor_absoluteX="115dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp" tools:layout_editor_absoluteY="96dp"/>
    <Button
            android:id="@+id/add_packages_button"
            android:text="@string/add_packages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/sync_packages_button"
            app:layout_constraintLeft_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
